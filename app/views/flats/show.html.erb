<div class="map" style="background-image: url('<%= @flat.picture_url %>')"></div>

<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="flat-show-card">
        <h2><strong><%= @flat.name %></strong></h2>
        <p class="flat-show-address"><%= @flat.address %></p>
      </div>

      <div class="flat-show-card">
        <h4><strong>Know more about this place...</strong></h4>
        <p><%= @flat.description %></p>
        <div class="map" style="background-image: url('https://maps.googleapis.com/maps/api/staticmap?center=<%= @flat.address %>&zoom=13&scale=2&size=1000x1000&maptype=roadmap&markers=color:red%7C<%= @flat.address %>&key=AIzaSyCCjGxymL5TasLWwqVkBHoyc-jBoKMSpRI')"></div>
      </div>
    </div>

    <div class="col-4">
      <div class="flat-show-card">

        <form action="">
          <div class="input-group">
            <span class="input-group-text" id="start-date-label">From:</span>
            <input type="text" class="form-control" placeholder="12/10/2017" aria-label="start-date" aria-describedby="start-date-label">
          </div>
          <div class="input-group mt-2">
            <span class="input-group-text" id="end-date-label">To:</span>
            <input type="text" class="form-control" placeholder="18/10/2017" aria-label="end-date" aria-describedby="start-date-label">
          </div>
          <input type="submit" value="Book" class="btn-book mt-2" style="width: 100%">
        </form>
      </div>

      <div class="flat-show-card">
        <h3><strong>Details</strong></h3>
        <div class="flex">
          <div class="flex align-items-center">
            <i class="fa-sharp fa-solid fa-people-group"></i>
            <%= @flat.number_of_guests %> people
          </div>
          <div class="flex align-items-center ms-3">
            <i class="fa-sharp fa-solid fa-dollar-sign"></i>
            <%= @flat.price_per_night %> per night
          </div>
        </div>
      </div>

  </div>
</div>

<div class="container barra-acao">
  <button class="btn-back"><%= link_to "Back to list", flats_path %></button> |
  <button class="btn-edit-flat"><%= link_to "Edit Ad", edit_flat_path(@flat) %></button> |
  <%= button_to "Delete Ad", @flat, :class=>"btn-delete", method: :delete %>
</div>
